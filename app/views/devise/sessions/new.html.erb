<form class="form-signin">
  <div class="container"> 
    <h2 class="form-signin-heading">Please sign in...</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="form-group row">
      <div class="field col-sm-4 col-md-offset-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email address" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="field col-sm-4 col-md-offset-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
      </div>
    </div>

    <div class="form-group row">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    </div>

    <% end %>

    <div class="form-group row">
      <div class="actions col-sm-4 col-md-offset-4">
        <div class="btn btn-primary btn-block">
          <%= f.submit "Log in" %>
        </div>
      </div>
    </div>

    <% end %>

    <div class="actions col-sm-4 col-md-offset-4">
      <hr>
      <%= render "devise/shared/links" %>
    </div>