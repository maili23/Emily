<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>

    
    <div class="rating">
      <p>
        <%= f.label :rating %><br>
        <%= f.text_field :rating %>
      </p>
    </div>
    

    <p>
      <%= f.submit "Submit", class: "btn btn-default btn-xs" %>
    </p>
  <% end %>
<% end %>