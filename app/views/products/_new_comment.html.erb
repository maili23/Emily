<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    
    <div class="form-group row">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: "form-control", placeholder: "Thank you for your review" %>
      </div>
    </div>    

    <p>
      <div class="rating"></div>
    </p>    

    <p>
      <%= f.submit "Submit", class: "btn btn-primary btn-xs" %>
    </p>
  <% end %>
<% end %>