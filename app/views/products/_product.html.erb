<div class="row">
  <div class="col-md-7">
    <%= image_tag(product.image_url, class: "img-responsive img-zoom", data_zoom_image: product.image_url) %>
  </div>
  <div class="col-md-5">
    <h3><%= product.name %></h3>
    <h4><%= product.price %></h4>
    <p><%= product.description %></p>
    <%= link_to "Find out more", product, :class => 'btn btn-default' %><%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-default' %><%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %>
  </div>
</div>
<!-- /.row -->

<hr>